<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp">

    <com.velli.commander.roboto.RobotoTextView
        android:id="@+id/list_item_program_name_text"
        style="@style/ListPrimaryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/list_item_program_name_button_overflow"
        android:layout_toStartOf="@+id/list_item_program_name_button_overflow"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_centerVertical="true"/>

    <ImageButton
        android:id="@+id/list_item_program_name_button_overflow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@mipmap/ic_dots_vertical_grey"/>
    
    <View
        style="@style/Divider"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>