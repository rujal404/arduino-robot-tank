<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:robototext="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="48dp">

    <View
        style="@style/Divider"
        android:layout_gravity="bottom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

    <com.velli.commander.roboto.RobotoTextView
        style="@style/ListCommandTextReceived.Date"
        android:id="@+id/list_item_command_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_arrow_right_bold_grey"
        android:drawableStart="@mipmap/ic_arrow_right_bold_grey"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        robototext:style="medium"
        android:text="12.10.2016 23:21:48"/>

    <com.velli.commander.roboto.RobotoTextView
        style="@style/ListCommandTextReceived.Message"
        android:id="@+id/list_item_command_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        robototext:style="regular"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="messgae command G29 dkdkkkzkzdkkzdkzdkk"/>
    </LinearLayout>
</FrameLayout>