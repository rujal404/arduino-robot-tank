<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.ActivitySettings" parent="@style/AppTheme">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="Theme.AppCompat.Light" />

    <style name="Title" parent="@style/ListPrimaryText">
        <item name="android:textSize">24sp</item>
    </style>


    <style name="Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:alpha">0.54</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="style">medium</item>
    </style>

    <style name="ListPrimaryText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:alpha">0.87</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="style">regular</item>
    </style>

    <style name="ListPrimaryTextLight">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:alpha">1</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="style">regular</item>
    </style>

    <style name="ListCommandTextReceived">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:alpha">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="ListCommandTextReceivedLight">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:alpha">0.87</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="ListCommandTextReceived.Date" parent="ListCommandTextReceived">
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="style">medium</item>
    </style>

    <style name="ListCommandTextReceived.Message" parent="ListCommandTextReceived">
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="style">light</item>
    </style>

    <style name="ListCommandTextReceivedLight.Date" parent="ListCommandTextReceivedLight">
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="style">regular</item>
    </style>

    <style name="ListCommandTextReceivedLight.Message" parent="ListCommandTextReceivedLight">
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="style">light</item>
    </style>

    <style name="ListSecondaryText" parent="@style/ListPrimaryText">
        <item name="android:textColor">#8A000000</item>
        <item name="android:alpha">1</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="StepperCircleActive">
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/stepper_icon_background</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="style">regular</item>
    </style>

    <style name="StepperTextActive">
        <item name="android:textColor">#000000</item>
        <item name="android:alpha">0.87</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="style">medium</item>
    </style>

    <style name="SpinnerCommandOption" >
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>

    <style name="SeekBarCommandOption" >
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#000000</item>
        <item name="android:alpha">0.12</item>
    </style>

</resources>